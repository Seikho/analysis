{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Build",
      "command": "yarn",
      "args": ["tsc"],
      "problemMatcher": ["$tsc"],
      "isBackground": true,
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Watch",
      "command": "yarn",
      "args": ["tsc", "--watch"],
      "problemMatcher": ["$tsc-watch"],
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"]
    }
  ]
}
